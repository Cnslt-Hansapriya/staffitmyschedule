<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:custData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="Change Assignment Start Date"  afterClose="onClose">
		<content>
			<VBox justifyContent="SpaceBetween" class="assignmentCreateSectionContainer">
				<HBox justifyContent="SpaceBetween" width="100%" height="100%">
					<VBox justifyContent="SpaceBetween" alignItems="Stretch"
						width="33%" height="2.0em">
						<VBox height="7em" justifyContent="SpaceBetween">
							<VBox>
								<Label text="New Assignment Start Date" required="true" />
								<DatePicker valueStateText="{i18n>ENTER_VALID_DATE_RANGE_ERROR}"
									id="sStartEndDate" dateValue="{path:'AssignmentModel>/StartDate'}"
									placeholder="{i18n>REQUEST_START_END_DATE_PLACEHOLDER}" change="updateAssignDays"
									width="14em" />
							</VBox>
						</VBox>
						<VBox binding="{/ProductCollection}">
							<RadioButton groupName="workHours" text="Standard Working Hours" />
							<VBox>
								<RadioButton groupName="workHours"
									text="Different work hours per day (repeated weekly)" selected="true" />
								<HBox id="weekdaysSelection" justifyContent="SpaceBetween"
									alignItems="Start">
									<VBox justifyContent="Center" alignItems="Center" width="2rem">
										<Input width="2.5rem"></Input>
										<Label text="M" />
									</VBox>
									<VBox justifyContent="Center" alignItems="Center" width="2rem">
										<Input width="2.5rem"></Input>
										<Label text="T" />
									</VBox>
									<VBox justifyContent="Center" alignItems="Center" width="2rem">
										<Input width="2.5rem"></Input>
										<Label text="W" />
									</VBox>
									<VBox justifyContent="Center" alignItems="Center" width="2rem">
										<Input width="2.5rem"></Input>
										<Label text="T" />
									</VBox>
									<VBox justifyContent="Center" alignItems="Center" width="2rem">
										<Input width="2.5rem"></Input>
										<Label text="F" />
									</VBox>
									<VBox justifyContent="Center" alignItems="Center" width="2rem">
										<Input width="2.5rem"></Input>
										<Label text="S" />
									</VBox>
									<VBox justifyContent="Center" alignItems="Center" width="2rem">
										<Input width="2.5rem"></Input>
										<Label text="S" />
									</VBox>
								</HBox>
							</VBox>
						</VBox>
					</VBox>
					<VBox justifyContent="Center" alignItems="Center">
						<VBox>
							<Title text="Role Name/Number"></Title>
							<Input enabled="false" editable="false"></Input>
						</VBox>
						<VBox>
							<Title text="Request Name/Number"></Title>
							<Input enabled="false" editable="false"></Input>
						</VBox>
						<VBox>
							<Title text="Candidate Name"></Title>
							<Input enabled="false" editable="false"></Input>
						</VBox>
						<VBox>
							<Title text="Booking Type"></Title>
							<Input enabled="false" editable="false"></Input>
						</VBox>
						<VBox>
							<Title text="Assignment Type"></Title>
							<Input enabled="false" editable="false"></Input>
						</VBox>
					</VBox>
				</HBox>
			</VBox>
		</content>
		<buttons>
			<Button text="Cancel" press="_handleCancel" ></Button>
			<Button text="Save" press="_handleSave" ></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>